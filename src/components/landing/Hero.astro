<script>
	const seeCV = () => {
		try {
			const publicURL = window.location.origin;
			const cvUrl = `${publicURL}/cv/mateobetancur-spanish-cv.pdf`;
			window.open(cvUrl, "_blank");
		} catch (error) {
			console.error(error);
		}
	};

	const cvButton = document.getElementById("cv-button");
	if (cvButton) {
		cvButton.addEventListener("click", seeCV);
	} else {
		console.error("CV button not found");
	}
</script>
